<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="payment_gateway_pr.list">
      <field name="name">payment_gateway_pr list</field>
      <field name="model">payment_gateway_pr.payment_gateway_pr</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="payment_gateway_pr.action_window">
      <field name="name">payment_gateway_pr window</field>
      <field name="res_model">payment_gateway_pr.payment_gateway_pr</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="payment_gateway_pr.action_server">
      <field name="name">payment_gateway_pr server</field>
      <field name="model_id" ref="model_payment_gateway_pr_payment_gateway_pr"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="payment_gateway_pr" id="payment_gateway_pr.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="payment_gateway_pr.menu_1" parent="payment_gateway_pr.menu_root"/>
    <menuitem name="Menu 2" id="payment_gateway_pr.menu_2" parent="payment_gateway_pr.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="payment_gateway_pr.menu_1_list" parent="payment_gateway_pr.menu_1"
              action="payment_gateway_pr.action_window"/>
    <menuitem name="Server to list" id="payment_gateway_pr" parent="payment_gateway_pr.menu_2"
              action="payment_gateway_pr.action_server"/>

  </data>
</odoo>